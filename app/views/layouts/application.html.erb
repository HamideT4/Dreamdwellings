<!DOCTYPE html>
<html>
  <head>
    <title>Dreamdwellings</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
  </head>

  <body id = "<%= controller.controller_name %>" class="<%= controller.action_name %><%= "show-sidebar" if @show_sidebar.present? %>">
    <% if ["public", "devise", "sessions", "registrations", "passwords", "confirmations", "mailer", "property_path"].include?(controller.controller_name)%>
    <%# if @show_sidebar.nil?%>
    <header>
      <%= render "layouts/nav/public" %>
      <%= yield %>
    </header>
    <% else %>
      <%= render "layouts/nav/account" %>

    <div class="container-fluid">
      <div class="row">
        <%= render "layouts/nav/sidebar" %>
          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
             <%= yield %>
          </main>
        </div>
      </div>
    <% end %>
    <%#p class="notice"><%= notice %>
    <%#p class="alert"><%= alert %>

    <p style="color: green"><%= notice %></p>

   <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
   <script>feather.replace()</script>
  </body>
</html>
