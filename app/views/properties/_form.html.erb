<br/>
<%= simple_form_for property, html: {class: 'form-horizontal'} do |f|%>

   <%= f.input :title, label:'Ajouter un titre à votre annonce' %>
   <%= f.input :categorie, label:'Quel  la catégorie' %>
   <%= f.input :for_sale, as: :select, collection: [['En vente', true], ['En location', false]], include_blank: false %>
   <%= f.input :available_date, as: :datetime %>
   <%= f.input :description, as: :text %>
   <%= f.input :price %>
   <%= f.input :rooms, label:'Quel est le nombre de chambre ' %>
   <%= f.input :bathrooms, label:'Quel est le nombre de toilettes ' %>
   <%= f.input :chicken, label:'Quel le nombre de cuisine ' %>
   <%= f.input :localisation %>
   <%= f.input :photo, as: :file %>
   <%= f.button :submit, class: 'btn-primary' %>

<% end %>