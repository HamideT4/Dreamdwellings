<%= form_with(model: property) do |form| %>
  <% if property.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :categorie, style: "display: block" %>
    <%= form.text_field :categorie, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :localisation, style: "display: block" %>
    <%= form.text_field :localisation, class: "form-control" %>
  </div>

  <div class="form-group">

  <p>
    <%= form.label :photo, style: "display: block" %>
    <%= form.file_field :photo %> <br/>
    <%= image_tag(@property.photo_url) if @property.photo? %>
    <%#= form.hidden_field :photo_cache %>
  </p>

   <%# if @property.photo? 
      <p>
      <%= image_tag @property.photo_url(:thumb) 
      </p>
  <% end 

    <%= form.label :photo, class: "form-control" 
    <%= form.file_field :photo%> 
  </div>
  <br/>

  <div class="form-group">
    <%= form.submit "Save Property", class: "btn btn-lg btn-block btn-success" %>
  </div>
<% end %>
