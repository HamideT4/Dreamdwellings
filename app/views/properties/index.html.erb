<h1 class="h3">Mes annonces</h1>
<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Titre</th>
              <th scope="col">Categorie</th>
              <th scope="col">Statut</th>
              <th scope="col">Description</th>
              <th scope="col">Prix</th>
              <th scope="col">Localisation</th>
              <th colspan = "3"></th>
            </tr>
          </thead>

          <tbody>
            <% @properties.each do |property| %>
            <tr>
              <td><%= property.title %></td>
              <td><%= property.categorie %></td>
              <td><%= property.status %></td>
              <td><%= property.description %></td>
              <td><%= property.price %></td>
              <td><%= property.localisation %></td>
              <td><%= link_to "Détails", property %></td>
              <td><%= link_to "Modifier", edit_property_path(property) %></td>
              <td><%= button_to "Supprimer", property, method: :delete, data: { confirm: 'Are you sure'} %></td>
            </tr>
             <% end %>
          </tbody>
        </table>
      </div>


<%= link_to "Créer une nouvelle annonce", new_property_path, class: "btn btn-primary" %>
