<% properties.each do |property| %>
    <div class="col-3">
        <div class="property border mb-3">
        <%= link_to property_path(property) do%>
            <div class="property-thumb", style="background-image:url('<%= property.photo_url %>')">
            </div>
        <style>
            .property-thumb{
              height: 170px;
              background-repeat: no-repeat;
              background-position: center center;
              background-size: cover;
            }
        </style>

            <div class="property-summary p-2 mb-2", style="height: 170px;">
            <h3 class="h5"><%= link_to property.title, property_path(property)%></h3>
            <p class="mt-2"><%= property.localisation %></p>
            <ul>
            <li><%= property.rooms%> Chambres </li>
            <li><%= property.chicken%> Cuisines </li>
            <li><%= property.bathrooms%> Toilettes </li>
            </ul>
            </div>
            <% end%>
        </div>
    </div>
<% end %>