  <div class="container">

    <div class="row">

      <div class="col-md-6 offset-md-3">

      <br><br><br>

      <%= form_for resource, as: resource_name, url: new_user_password_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

        <h1 class="h3 mb-3 font-weight-normal text-center">Forgot your password ?</h1>

        <div class="form-group">

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>

        </div>

      <div class="actions mt-5">

      <div style="text-align:center;">

        <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %> <br/> <br/>

        <p > <%= link_to "Log in", new_user_session_path(resource_name) %> - <%= link_to "Sign up", new_user_registration_path(resource_name) %> </p>

        </div>

      </div>

      <% end %>

      
      </div>

    </div>

  </div>
